---
interface Props {
  embedUrl: string
  title?: string
  height?: string
}

const {
  embedUrl,
  title,
  height = '400px',
} = Astro.props
---

<section
  class="map-embed"
  data-vf-component="MapEmbed"
  data-vf-file="src/components/integrations/MapEmbed.astro"
>
  <div class="map-embed__inner">
    {title && (
      <header class="map-embed__header">
        <h2 class="map-embed__title">{title}</h2>
      </header>
    )}

    <div class="map-embed__frame-wrapper" style={`height: ${height};`}>
      <iframe
        class="map-embed__iframe"
        src={embedUrl}
        loading="lazy"
        title={title || 'Map location'}
        allowfullscreen
      />
    </div>
  </div>
</section>

<style>
  .map-embed {
    padding: var(--space-section) var(--container-padding);
  }

  .map-embed__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .map-embed__header {
    text-align: center;
  }

  .map-embed__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    line-height: 1.2;
  }

  .map-embed__frame-wrapper {
    width: 100%;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .map-embed__iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  @media (max-width: 768px) {
    .map-embed__title {
      font-size: var(--text-2xl);
    }
  }
</style>
