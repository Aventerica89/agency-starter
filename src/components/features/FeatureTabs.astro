---
interface TabItem {
  label: string
  title: string
  description: string
  image?: string
}

interface Props {
  tabs: TabItem[]
}

const { tabs } = Astro.props
---

<section
  class="feature-tabs"
  data-vf-component="FeatureTabs"
  data-vf-file="src/components/features/FeatureTabs.astro"
>
  <div class="feature-tabs__inner">
    {tabs.map((_, index) => (
      <input
        class="feature-tabs__radio"
        type="radio"
        name="feature-tabs"
        id={`feature-tab-${index}`}
        checked={index === 0}
      />
    ))}

    <div class="feature-tabs__bar">
      {tabs.map((tab, index) => (
        <label class="feature-tabs__label" for={`feature-tab-${index}`}>
          {tab.label}
        </label>
      ))}
    </div>

    <div class="feature-tabs__panels">
      {tabs.map((tab) => (
        <div class="feature-tabs__panel">
          <div class="feature-tabs__panel-content">
            <h3 class="feature-tabs__panel-title">{tab.title}</h3>
            <p class="feature-tabs__panel-desc">{tab.description}</p>
          </div>
          {tab.image && (
            <div class="feature-tabs__panel-media">
              <img
                class="feature-tabs__panel-image"
                src={tab.image}
                alt={tab.title}
                loading="lazy"
              />
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .feature-tabs {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .feature-tabs__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .feature-tabs__radio {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .feature-tabs__bar {
    display: flex;
    gap: var(--space-xs);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-xs);
  }

  .feature-tabs__label {
    cursor: pointer;
    flex-shrink: 0;
    display: block;
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md) var(--radius-md) 0 0;
    border-bottom: 2px solid transparent;
    transition: color var(--transition-fast),
      border-color var(--transition-fast),
      background var(--transition-fast);
  }

  .feature-tabs__label:hover {
    color: var(--color-text);
    background: var(--color-bg-alt);
  }

  .feature-tabs__panel {
    display: none;
    gap: var(--space-xl);
    align-items: center;
    grid-template-columns: 1fr;
  }

  .feature-tabs__panel-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .feature-tabs__panel-title {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .feature-tabs__panel-desc {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .feature-tabs__panel-media {
    overflow: hidden;
    border-radius: var(--radius-lg);
  }

  .feature-tabs__panel-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  /*
   * CSS-only tab switching via general sibling combinator (~).
   * Radio inputs are direct children of __inner, placed before __bar and __panels.
   * :nth-of-type targets radio inputs by position among sibling <input> elements.
   * Covers up to 6 tabs.
   */

  /* Active tab label styling */
  .feature-tabs__radio:nth-of-type(1):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(1),
  .feature-tabs__radio:nth-of-type(2):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(2),
  .feature-tabs__radio:nth-of-type(3):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(3),
  .feature-tabs__radio:nth-of-type(4):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(4),
  .feature-tabs__radio:nth-of-type(5):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(5),
  .feature-tabs__radio:nth-of-type(6):checked ~ .feature-tabs__bar .feature-tabs__label:nth-child(6) {
    color: var(--color-primary);
    font-weight: 600;
    border-bottom-color: var(--color-primary);
  }

  /* Active panel display */
  .feature-tabs__radio:nth-of-type(1):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(1),
  .feature-tabs__radio:nth-of-type(2):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(2),
  .feature-tabs__radio:nth-of-type(3):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(3),
  .feature-tabs__radio:nth-of-type(4):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(4),
  .feature-tabs__radio:nth-of-type(5):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(5),
  .feature-tabs__radio:nth-of-type(6):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(6) {
    display: grid;
  }

  @media (min-width: 768px) {
    .feature-tabs__label {
      font-size: var(--text-base);
      padding: var(--space-sm) var(--space-xl);
    }

    /* Two-column panel layout on desktop */
    .feature-tabs__radio:nth-of-type(1):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(1),
    .feature-tabs__radio:nth-of-type(2):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(2),
    .feature-tabs__radio:nth-of-type(3):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(3),
    .feature-tabs__radio:nth-of-type(4):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(4),
    .feature-tabs__radio:nth-of-type(5):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(5),
    .feature-tabs__radio:nth-of-type(6):checked ~ .feature-tabs__panels .feature-tabs__panel:nth-child(6) {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
