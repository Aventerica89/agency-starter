---
import type { Service } from '../../lib/types'

interface Props {
  title?: string
  subtitle?: string
  items: Service[]
  columns?: 2 | 3 | 4
}

const {
  title,
  subtitle,
  items,
  columns = 3,
} = Astro.props
---

<section
  class="feature-grid"
  data-vf-component="FeatureGrid"
  data-vf-file="src/components/features/FeatureGrid.astro"
>
  <div class="feature-grid__inner">
    {(title || subtitle) && (
      <header class="feature-grid__header">
        {title && <h2 class="feature-grid__title">{title}</h2>}
        {subtitle && <p class="feature-grid__subtitle">{subtitle}</p>}
      </header>
    )}
    <div class="feature-grid__list" style={`--cols: ${columns}`}>
      {items
        .sort((a, b) => a.order - b.order)
        .map((item) => (
          <article class="feature-grid__card">
            {item.icon && (
              <span class="feature-grid__icon" aria-hidden="true">
                {item.icon}
              </span>
            )}
            <h3 class="feature-grid__card-title">{item.title}</h3>
            <p class="feature-grid__card-desc">{item.description}</p>
            {item.price && (
              <p class="feature-grid__card-price">{item.price}</p>
            )}
          </article>
        ))}
    </div>
  </div>
</section>

<style>
  .feature-grid {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .feature-grid__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .feature-grid__header {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .feature-grid__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    line-height: 1.2;
  }

  .feature-grid__subtitle {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .feature-grid__list {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .feature-grid__list {
      grid-template-columns: repeat(var(--cols, 3), 1fr);
    }
  }

  .feature-grid__card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--transition-base), transform var(--transition-base);
  }

  .feature-grid__card:hover {
    box-shadow: var(--shadow-lg);
  }

  .feature-grid__icon {
    font-size: var(--text-2xl);
    line-height: 1;
  }

  .feature-grid__card-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .feature-grid__card-desc {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .feature-grid__card-price {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-accent-dark);
    margin-top: var(--space-xs);
  }
</style>
