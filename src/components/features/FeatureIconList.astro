---
interface IconListItem {
  icon: string
  title: string
  description: string
}

interface Props {
  title?: string
  subtitle?: string
  items: IconListItem[]
}

const {
  title,
  subtitle,
  items,
} = Astro.props
---

<section
  class="feature-icon-list"
  data-vf-component="FeatureIconList"
  data-vf-file="src/components/features/FeatureIconList.astro"
>
  <div class="feature-icon-list__inner">
    {(title || subtitle) && (
      <header class="feature-icon-list__header">
        {title && <h2 class="feature-icon-list__title">{title}</h2>}
        {subtitle && (
          <p class="feature-icon-list__subtitle">{subtitle}</p>
        )}
      </header>
    )}
    <ul class="feature-icon-list__list">
      {items.map((item) => (
        <li class="feature-icon-list__item">
          <span class="feature-icon-list__icon" aria-hidden="true">
            {item.icon}
          </span>
          <div class="feature-icon-list__body">
            <h3 class="feature-icon-list__item-title">{item.title}</h3>
            <p class="feature-icon-list__item-desc">{item.description}</p>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .feature-icon-list {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .feature-icon-list__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .feature-icon-list__header {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .feature-icon-list__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    line-height: 1.2;
  }

  .feature-icon-list__subtitle {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .feature-icon-list__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
  }

  .feature-icon-list__item {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
    align-items: flex-start;
  }

  .feature-icon-list__item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .feature-icon-list__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--space-3xl);
    height: var(--space-3xl);
    font-size: var(--text-xl);
    background: var(--color-bg-alt);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    line-height: 1;
  }

  .feature-icon-list__body {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: 0;
  }

  .feature-icon-list__item-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .feature-icon-list__item-desc {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .feature-icon-list__item {
      gap: var(--space-xl);
      padding: var(--space-2xl) 0;
    }
  }
</style>
