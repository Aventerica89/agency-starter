---
interface Props {
  title?: string
  logos: Array<{ src: string; alt: string; href?: string }>
}

const { title, logos } = Astro.props
---

<section
  class="logo-cloud"
  data-vf-component="LogoCloud"
  data-vf-file="src/components/social-proof/LogoCloud.astro"
>
  <div class="logo-cloud__inner">
    {title && <p class="logo-cloud__title">{title}</p>}

    <div class="logo-cloud__list">
      {logos.map((logo) =>
        logo.href ? (
          <a
            href={logo.href}
            class="logo-cloud__item"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              class="logo-cloud__logo"
              src={logo.src}
              alt={logo.alt}
              loading="lazy"
            />
          </a>
        ) : (
          <div class="logo-cloud__item">
            <img
              class="logo-cloud__logo"
              src={logo.src}
              alt={logo.alt}
              loading="lazy"
            />
          </div>
        )
      )}
    </div>
  </div>
</section>

<style>
  .logo-cloud {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .logo-cloud__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .logo-cloud__title {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-align: center;
  }

  .logo-cloud__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--space-2xl);
  }

  .logo-cloud__item {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
    transition: opacity var(--transition-base);
  }

  .logo-cloud__item:hover {
    opacity: 1;
  }

  .logo-cloud__logo {
    height: var(--space-2xl);
    width: auto;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .logo-cloud__list {
      gap: var(--space-xl);
    }

    .logo-cloud__logo {
      height: var(--space-xl);
    }
  }
</style>
