---
interface Props {
  title?: string
  items: Array<{ question: string; answer: string }>
}

const {
  title,
  items,
} = Astro.props
---

<section
  class="faq-accordion"
  data-vf-component="FAQAccordion"
  data-vf-file="src/components/content/FAQAccordion.astro"
>
  <div class="faq-accordion__inner">
    {title && <h2 class="faq-accordion__title">{title}</h2>}

    <div class="faq-accordion__list">
      {items.map((item) => (
        <details class="faq-accordion__item" name="faq">
          <summary class="faq-accordion__question">
            <span class="faq-accordion__question-text">
              {item.question}
            </span>
            <span class="faq-accordion__chevron" aria-hidden="true">
              &#8250;
            </span>
          </summary>
          <div class="faq-accordion__answer">
            <p class="faq-accordion__answer-text">{item.answer}</p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .faq-accordion {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .faq-accordion__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .faq-accordion__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    text-align: center;
    line-height: 1.2;
  }

  .faq-accordion__list {
    display: flex;
    flex-direction: column;
    border-top: 1px solid var(--color-border);
  }

  .faq-accordion__item {
    border-bottom: 1px solid var(--color-border);
  }

  .faq-accordion__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
    padding: var(--space-lg) 0;
    cursor: pointer;
    list-style: none;
  }

  .faq-accordion__question::-webkit-details-marker {
    display: none;
  }

  .faq-accordion__question::marker {
    content: '';
  }

  .faq-accordion__question-text {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
  }

  .faq-accordion__chevron {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    transition: transform var(--transition-fast);
    flex-shrink: 0;
    line-height: 1;
  }

  .faq-accordion__item[open] .faq-accordion__chevron {
    transform: rotate(90deg);
  }

  .faq-accordion__answer {
    padding-bottom: var(--space-lg);
  }

  .faq-accordion__answer-text {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
  }
</style>
