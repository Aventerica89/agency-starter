---
import type { BlogPost } from '../../lib/types'

interface Props {
  title?: string
  posts: BlogPost[]
}

const {
  title,
  posts,
} = Astro.props

function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  })
}
---

<section
  class="blog-list"
  data-vf-component="BlogList"
  data-vf-file="src/components/content/BlogList.astro"
>
  <div class="blog-list__inner">
    {title && <h2 class="blog-list__title">{title}</h2>}

    <div class="blog-list__items">
      {posts.map((post) => (
        <article class="blog-list__item">
          <a href={`/blog/${post.slug}`} class="blog-list__link">
            {post.coverImage && (
              <div class="blog-list__image-wrap">
                <img
                  class="blog-list__image"
                  src={post.coverImage}
                  alt={post.title}
                  loading="lazy"
                />
              </div>
            )}

            <div class="blog-list__content">
              <div class="blog-list__meta">
                {post.category && (
                  <span class="blog-list__category">{post.category}</span>
                )}
                <time
                  class="blog-list__date"
                  datetime={post.publishedAt}
                >
                  {formatDate(post.publishedAt)}
                </time>
              </div>

              <h3 class="blog-list__item-title">{post.title}</h3>

              <p class="blog-list__excerpt">{post.excerpt}</p>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-list {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .blog-list__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .blog-list__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    text-align: center;
    line-height: 1.2;
  }

  .blog-list__items {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .blog-list__item {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--transition-base);
  }

  .blog-list__item:hover {
    box-shadow: var(--shadow-md);
  }

  .blog-list__link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  @media (min-width: 768px) {
    .blog-list__link {
      flex-direction: row;
    }
  }

  .blog-list__image-wrap {
    overflow: hidden;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .blog-list__image-wrap {
      width: 16rem;
    }
  }

  .blog-list__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 16 / 9;
    transition: transform var(--transition-slow);
  }

  @media (min-width: 768px) {
    .blog-list__image {
      aspect-ratio: auto;
      min-height: 100%;
    }
  }

  .blog-list__item:hover .blog-list__image {
    transform: scale(1.05);
  }

  .blog-list__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-lg);
    flex: 1;
  }

  .blog-list__meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .blog-list__category {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-accent-dark);
    background: var(--color-bg-alt);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-list__date {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .blog-list__item-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .blog-list__excerpt {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
</style>
