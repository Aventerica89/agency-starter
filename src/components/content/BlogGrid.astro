---
import type { BlogPost } from '../../lib/types'

interface Props {
  title?: string
  posts: BlogPost[]
  columns?: 2 | 3
}

const {
  title,
  posts,
  columns = 3,
} = Astro.props

function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  })
}

function truncateExcerpt(text: string, maxLength: number): string {
  if (text.length <= maxLength) return text
  const trimmed = text.slice(0, maxLength)
  const lastSpace = trimmed.lastIndexOf(' ')
  return (lastSpace > 0 ? trimmed.slice(0, lastSpace) : trimmed) + '\u2026'
}
---

<section
  class="blog-grid"
  data-vf-component="BlogGrid"
  data-vf-file="src/components/content/BlogGrid.astro"
>
  <div class="blog-grid__inner">
    {title && <h2 class="blog-grid__title">{title}</h2>}

    <div class="blog-grid__list" style={`--cols: ${columns}`}>
      {posts.map((post) => (
        <article class="blog-grid__card">
          <a href={`/blog/${post.slug}`} class="blog-grid__link">
            {post.coverImage && (
              <div class="blog-grid__image-wrap">
                <img
                  class="blog-grid__image"
                  src={post.coverImage}
                  alt={post.title}
                  loading="lazy"
                />
              </div>
            )}

            <div class="blog-grid__body">
              {post.category && (
                <span class="blog-grid__category">{post.category}</span>
              )}

              <h3 class="blog-grid__card-title">{post.title}</h3>

              <p class="blog-grid__excerpt">
                {truncateExcerpt(post.excerpt, 120)}
              </p>

              <div class="blog-grid__footer">
                <time
                  class="blog-grid__date"
                  datetime={post.publishedAt}
                >
                  {formatDate(post.publishedAt)}
                </time>
                <span class="blog-grid__read-more">Read more &rarr;</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-grid {
    padding: var(--space-section) var(--container-padding);
    background: var(--color-bg);
  }

  .blog-grid__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .blog-grid__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    text-align: center;
    line-height: 1.2;
  }

  .blog-grid__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .blog-grid__list {
      grid-template-columns: repeat(var(--cols, 3), 1fr);
    }
  }

  .blog-grid__card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--transition-base),
      transform var(--transition-base);
  }

  .blog-grid__card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .blog-grid__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .blog-grid__image-wrap {
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .blog-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-slow);
  }

  .blog-grid__card:hover .blog-grid__image {
    transform: scale(1.05);
  }

  .blog-grid__body {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-lg);
    flex: 1;
  }

  .blog-grid__category {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-accent-dark);
    background: var(--color-bg-alt);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    align-self: flex-start;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-grid__card-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .blog-grid__excerpt {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    flex: 1;
  }

  .blog-grid__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: var(--space-sm);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--color-border);
  }

  .blog-grid__date {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .blog-grid__read-more {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }

  .blog-grid__card:hover .blog-grid__read-more {
    color: var(--color-primary-dark);
  }
</style>
